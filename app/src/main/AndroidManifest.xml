<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="br.gov.pb.joaopessoa.elaspmjp">

    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission-sdk-23 android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_512_512"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="br.gov.pb.joaopessoa.elaspmjp.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="br.gov.pb.joaopessoa.elaspmjp.CadastroActivity"/>
        <activity android:name="br.gov.pb.joaopessoa.elaspmjp.InitialActivity"/>
        <activity android:name="br.gov.pb.joaopessoa.elaspmjp.AdicionarAmigosActivity"/>
        <activity android:name="br.gov.pb.joaopessoa.elaspmjp.ListViewAmigosActivity"/>
        <activity android:name="br.gov.pb.joaopessoa.elaspmjp.ListViewTelefones">
        </activity>
    </application>

</manifest>