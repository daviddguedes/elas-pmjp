<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/roxoClaro"
    tools:context="br.gov.pb.joaopessoa.elaspmjp.AdicionarAmigosActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@android:color/background_light"
        android:focusableInTouchMode="false"
        android:orientation="horizontal"
        android:padding="14dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nomeAmigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOME" />

            <TextView
                android:id="@+id/telefoneAmigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TELEFONE" />


        </LinearLayout>


        <ImageButton
            android:id="@+id/btnDeleteAmigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:contentDescription="BotÃ£o de deletar amigo"
            android:background="@android:color/background_light"
            android:src="@drawable/ic_trash_18" />


    </RelativeLayout>

</RelativeLayout>