<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.gov.pb.joaopessoa.elaspmjp.PerfilFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/roxoClaro">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtPerfilDadosUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dados do(a) usuÃ¡rio(a)"/>

            <EditText
                android:id="@+id/edtPerfilNomeUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/cardview_light_background"
                android:inputType="textCapWords"
                android:maxLength="80"
                android:padding="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <Button
                android:id="@+id/btnPerfilUpdateNomeUsuario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/roxoEscuro"
                android:text="Salvar"
                android:textColor="@color/cardview_light_background"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</FrameLayout>
